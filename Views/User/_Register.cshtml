@model User
<h1>Register</h1>
<form asp-controller="User" asp-action="Register" method="post">
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
        </div>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName">
        </div>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="Email"></label>
            <input asp-for="Email">
        </div>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="Password"></label>
            <input asp-for="Password">
        </div>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
    </div>
    <div>
        <div class="d-flex justify-content-between gap-3">
            <label asp-for="PasswordConfirmation"></label>
            <input asp-for="PasswordConfirmation">
        </div>
        <span asp-validation-for="PasswordConfirmation" class="text-danger font-weight-bold"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Register">
</form>